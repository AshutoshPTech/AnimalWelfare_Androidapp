<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".view_ads">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#22242A"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="15dp"
        android:id="@+id/prodimg"
        />
<!--    1.-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pet Name:-"
        android:textStyle="bold"
        android:id="@+id/e1"
        android:layout_below="@id/prodimg"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pet Name:-"
        android:id="@+id/prodname"
        android:layout_below="@id/e1"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />
<!--    2.-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pet Description:-"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/e2"
        android:layout_below="@id/prodname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pet Description:-"
        android:textColor="#ffffff"
        android:id="@+id/proddesc"
        android:layout_below="@id/e2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />
<!--    3.-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pet Breed:-"
        android:textColor="#ffffff"
        android:id="@+id/e3"
        android:textStyle="bold"
        android:layout_below="@id/proddesc"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pet Breed:-"
        android:textColor="#ffffff"
        android:id="@+id/prodprice"
        android:layout_below="@id/e3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />
<!--    4.-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Person's Contact Number:-"
        android:textColor="#ffffff"
        android:id="@+id/e4"
        android:textStyle="bold"
        android:layout_below="@id/prodprice"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Person's Contact Number:-"
        android:textColor="#ffffff "
        android:id="@+id/permob"
        android:layout_below="@id/e4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:fontFamily="@font/alata"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/wassup"
        android:layout_below="@id/permob"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:id="@+id/call"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/call"
        android:layout_toRightOf="@id/call"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/permob"
        android:padding="5dp"
        android:id="@+id/what"
        />


</RelativeLayout>
</ScrollView>

