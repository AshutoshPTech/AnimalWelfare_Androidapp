<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".9"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#22242A">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileI"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:src="@drawable/user"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profileI"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginVertical="30dp">

        <TextView
            android:id="@+id/namet"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/aboutt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/contactt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:ems="10"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>


    <Button
        android:id="@+id/Editbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="#1DC4E7"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/edit"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:ignore="NotSibling,TextContrastCheck,VisualLintButtonSize" />

</LinearLayout>

